import tensorflow as tf
import transformers

# Load the pre-trained Transformer model
model = transformers.TFRobertaModel.from_pretrained('roberta-base')
tokenizer = transformers.RobertaTokenizer.from_pretrained('roberta-base')

# Define the input and output sequences
input_sequence = input("한국어에서 영어로 번역을 원하시는 문장을 입력하세요: "
output_sequence = model.generate(input_ids=tokenizer.encode(input_sequence, return_tensors='tf'))

# Decode the output sequence to obtain the translated text
output_text = tokenizer.decode(output_sequence[0], skip_special_tokens=True)

print(output_text)
